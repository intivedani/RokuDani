<?xml version="1.0" encoding="utf-8" ?>

<component name="CatalogItem" extends="Group">

     <interface>
        <field id="itemContent" type="node" onChange="onItemContentChanged"/>
        <field id="focusPercent" type="float" onChange="onUserHasFocus"/>
     </interface>

     <script type="text/brightscript" uri="CatalogItem.brs" /> 

    <children>
        <Poster 
            id="focusedBackground"
            uri="pkg:/images/focusBackground.9.png"
            visible="false"
            width="268"
            height="268" 
            translation="[0,0]"/>

        <LayoutGroup
            id="layoutGroup"
            layoutDirection="vert"
            translation="[19,19]"
            itemSpacings="[20,50]">

            <Poster 
                id="poster" 
                width="230"
                height="230"/>

            <Label 
                id="title"
                vertAlign="bottom"/>
                
        </LayoutGroup>
            
    </children>
</component>